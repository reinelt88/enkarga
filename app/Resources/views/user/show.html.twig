{% extends 'base.html.twig' %}

{% block body %}
    <h1>User information</h1>

    <div class="row">
        <div class="col-md-4">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Postalcode</th>
                    <td>{{ user.postalCode }}</td>
                </tr>
                <tr>
                    <th>Entity</th>
                    <td>{{ user.entity }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ user.city }}</td>
                </tr>
                <tr>
                    <th>Settlement</th>
                    <td>{{ user.settlement }}</td>
                </tr>
                <tr>
                    <th>Street</th>
                    <td>{{ user.street }}</td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td>{{ user.number }}</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>


    <ul style="list-style: none;">
        <li>
            <a href="{{ path('homepage') }}" class="btn btn-primary">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning">Edit</a>
        </li>
        {#<li>#}
            {#{{ form_start(delete_form) }}#}
                {#<input type="submit" value="Delete" class="btn btn-danger">#}
            {#{{ form_end(delete_form) }}#}
        {#</li>#}
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script>
		$(document).ready(function () {
			$('#dataTables-example').DataTable({
				responsive: true
			});
		});
	</script>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-8">
		<h1 class="page-header">
			<i class="fa fa-ambulance "></i> Users
		</h1>
	</div>
	<div class="row">
		<div class="col-lg-10">
			<div class="panel panel-default">
				<div class="panel-heading">
					Salas
				</div>
				<!-- /.panel-heading -->
				<div class="panel-body">
					<div class="dataTable_wrapper">
						<div class="table-responsive">
							<table class="table table-striped table-bordered table-hover" id="dataTables-example">
								<thead>
								<tr>
									<th>Id</th>
									<th>Nombre</th>
									<th>Total de Camas</th>
									<th>Disponibles</th>
									<th>No Disponibles</th>
								</tr>
								</thead>
								<tbody>
								{% for entity in entities %}
									<tr>
										<td>
											<a href="{{ path('id', { 'id': entity.idSala }) }}">{{ entity.idSala }}</a>
										</td>
										<td>{{ entity.nombre }}</td>
										<td>{{ entity.nombre }}</td>
										<td>{{ entity.nombre }}</td>
										<td>{{ entity.nombre }}</td>
									</tr>
								{% endfor %}
								</tbody>
							</table>
							{#</div>#}
						</div>
						<!-- /.table-responsive -->
					</div>
					<!-- /.panel-body -->
				</div>
				<!-- /.panel -->
			</div>
		</div>
{% endblock %}
